{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"outDir": "./dist",
		"declaration": true,
		"types": ["node"],
		"target": "es2021",
		"strictNullChecks": false,
		"noImplicitAny": false,
		"strictBindCallApply": false,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": false, "module": "nodenext",
		"moduleResolution": "nodenext",
		"baseUrl": "src",
		"rootDir": "src"
	},
	"include": ["src/**/*.ts"],
	"exclude": ["src/**/*.spec.ts", "src/**/*.test.ts"]
}
